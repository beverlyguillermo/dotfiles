[diff]
	tool = mvimdiff

[merge]
  tool = mvimdiff

[color]
    ui = auto

[core]
    excludesfile = ~/.gitignore
    editor = vim

[svn]
    rmdir = true

[user]
    name = Beverly Guillermo
    email = beverly.guillermo@gmail.com
[apply]
  whitespace = nowarn

[difftool "mvimdiff"]
  cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"

[mergetool "mvimdiff"]
  cmd = mvimdiff \"$LOCAL\" \"$REMOTE\" \"$MERGED\" \"$BASE\"
  keepBackup = false
