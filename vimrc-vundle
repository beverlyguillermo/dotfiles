" Underline the current line with '='

nmap <silent> ,ul :t.\|s/./=/g\|set nohls<cr>

" put the vim directives for my file editing settings in
nmap <silent> ,vi
     \ ovim:set ts=2 sts=2 sw=2:<CR>vim600:fdm=marker fdl=1 fdc=0:<ESC>

